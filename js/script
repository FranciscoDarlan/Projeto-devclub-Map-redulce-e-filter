let buttonMostrarTudo = document.querySelect('.div-buttons')
let divCardapio = document.querySelect('.cardapio-individual')

function MostrarTudoForEath(){
  menuOptions.forEach((produt) =>{
divCardapio = divCardapio + `
                <div class="div-img-comida">
                    <img src=${produt.src}>
                </div>
                <div class="div-nome-comida">
                    <p>${produt.nome}</p>
                </div>
                <div class="div-valor-comida">
                    <p>R$${produt.price}</p>
                </div>
                <div class="div-botao-comprar">
                    <button onclick="compraLanche()">COMPRAR</button>
                </div>
`
})

  divCardapio.innerHTML = divCardapio

}

buttonMostrarTudo.addEvenListener("click", MostrarTudoForEath);
