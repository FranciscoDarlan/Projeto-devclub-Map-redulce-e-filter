
const buttonForEach = document.querySelector('.show-all');
const lista = document.querySelector('.cardapio-individual');
let myLista = '';


function mostrarTudo(){
   //forEach
menuOptions.forEach( (product) => {
    myLista = myLista + `
    <div class="div-img-comida">
                    <img src=${product.src} alt="imagem-comida">
                </div>
                <div class="div-nome-comida">
                    <p>${product.name}</p>
                </div>
                <div class="div-valor-comida">
                    <p>R$${product.price}</p>
                </div>
                <div class="div-botao-comprar">
                    <button onclick="compraLanche()">COMPRAR</button>
                </div> 
                `
})
lista.innerHTML = myLista;
}

buttonForEach.addEventListener('click', mostrarTudo);