let buttonMostrarTudo = document.querySelect('.div-buttons'); // button chamar função
let divCardapio = document.querySelect('.cardapio-individual'); // div que mostra as informações

let buttonMostraDesconto = document.querySelect('.show-Descount');

function MostrarTudoForEath(){

  let myDivCardapio = ''; // começa a variavel sem nada ..

  menuOptions.forEach((produt) =>{  // function que chama o forEach
    myDivCardapio = myDivCardapio + ` // aqui pega minha div vazia e adiciona as modificações no array ..
                <div class="div-img-comida">
                    <img ${produt.src}>
                </div>
                <div class="div-nome-comida">
                    <p>${produt.nome}</p>
                </div>
                <div class="div-valor-comida">
                    <p>R$${produt.price}</p>
                </div>
                <div class="div-botao-comprar">
                    <button onclick="compraLanche()">COMPRAR</button>
                </div>
`
})

  divCardapio.innerHTML = myDivCardapio
}

function mostrarDesonto(){
  menuOptions.map(newArrayDescount){
    
  }
  MostrarTudoForEath(newArrayDescount)
}


buttonMostraDesconto.addEventListener('click', mostrarDesonto)
buttonMostrarTudo.addEvenListener("click", MostrarTudoForEath);
